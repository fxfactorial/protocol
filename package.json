{
  "name": "loopring-smart-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "transpile":
      "rm -rf ./transpiled; copyfiles ./build/**/* ./transpiled; ./node_modules/.bin/tsc",
    "pretest":
      "./node_modules/.bin/solium --dir contracts; ./node_modules/.bin/tslint --project .",
    "test": "npm run transpile; ./node_modules/.bin/truffle test",
    "docker":
      "docker-compose up --build --abort-on-container-exit; docker-compose logs -f test",
    "testdocker":
      "npm run transpile; ./node_modules/.bin/truffle test --network docker",
    "compile": "rm -rf build/contracts; ./node_modules/.bin/truffle compile",
    "migrate": "npm run transpile; ./node_modules/.bin/truffle migrate",
    "deploy": "npm run migrate --network kovan",
    "testrpc": "./node_modules/.bin/testrpc"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/bignumber.js": "^4.0.3",
    "@types/bluebird": "^3.5.3",
    "@types/lodash": "^4.14.63",
    "@types/node": "^7.0.13",
    "@types/request-promise-native": "^1.0.2",
    "copyfiles": "^1.2.0",
    "dirty-chai": "^2.0.0",
    "ethereumjs-testrpc": "6.0.1",
    "truffle": "4.0.1",
    "solc": "0.4.18",
    "solium": "^1.0.4",
    "typescript": "2.4.2",
    "tslint": "5.8.0",
    "web3-typescript-typings": "0.0.3",
    "zeppelin-solidity": "^1.2.0"
  },
  "dependencies": {
    "bignumber.js": "^4.1.0",
    "bluebird": "^3.5.0",
    "bn.js": "^4.11.8",
    "es6-promisify": "^5.0.0",
    "ethereumjs-abi": "^0.6.4",
    "ethereumjs-util": "^5.1.1",
    "lodash": "^4.17.4",
    "web3": "0.20.2"
  }
}
